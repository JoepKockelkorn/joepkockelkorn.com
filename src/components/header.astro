---
import NavLink from './nav-link.astro'
import ThemeSwitcher from './theme-switcher.astro'
---

<header
	class="sticky top-0 z-10 flex h-[3.75rem] w-full shrink-0 flex-nowrap bg-background"
>
	<nav class="mx-auto flex w-full max-w-3xl justify-end">
		<NavLink
			extraClasses="mr-auto p-4 md:px-6 xl:px-8 font-semibold text-xl"
			to="/"
			exact
		>
			<h1>Joep Kockelkorn</h1>
		</NavLink>
		<NavLink to="/blog">Blog</NavLink>
		<ThemeSwitcher />
	</nav>
</header>
