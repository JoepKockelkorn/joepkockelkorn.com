{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "remix build && run-p dev:*",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev:css": "npm run css -- --watch",
    "dev:remix": "remix watch",
    "build": "run-s build:*",
    "build:css": "npm run css -- --minify",
    "build:remix": "remix build",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "css": "tailwindcss -i ./app/styles.css -o ./app/styles.output.css",
    "lint": "eslint . --ext .js --ext .tsx --ext .ts -c .eslintrc.js --ignore-path .gitignore",
    "postinstall": "touch ./app/styles.output.css"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.14.3",
    "@remix-run/cloudflare-pages": "^1.14.3",
    "@remix-run/react": "^1.14.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^6.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.19.0",
    "@remix-run/dev": "^1.14.3",
    "@remix-run/eslint-config": "^1.14.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.2.7",
    "typescript": "~4.9.5",
    "wrangler": "^2.12.3"
  },
  "engines": {
    "node": ">=16.13"
  }
}
